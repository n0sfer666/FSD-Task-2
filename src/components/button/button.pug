//- size: small, medium, big
//- theme:  for {size: small}: isGray (true) - gray color, else purple
//-         for {size: medium}: gradient, border
//- isOpacity: true - add button-opacity class for medium size
//- title: whatever
mixin button({size = "big", theme = "gradient", type = "button", title = "click me", isGray = false, jsClass = "undefined", href = "undefined" } = {})
  -
    let isLink = href === "undefined" ? false : true
    let className = ""
    if(jsClass === "undefined")
      className = `button button-${size}`
    else
      className = `button js-${jsClass}-button button-${size}`
    if(size === "medium")
      className += ` button-${theme}`
      if(isOpacity)
        className += " button-opacity"
    if(size === "small")
      className += isGray ? " button-gray" : " button-purple"

  if isLink
    button(type=type, class=className, href=href)
      h3.h3 #{title}
  else
    button(type=type, class=className)
      h3.h3 #{title}