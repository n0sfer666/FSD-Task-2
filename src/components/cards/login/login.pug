include ../../_form-elements/text-field/text-field
include ../../_form-elements/_buttons/button/button

mixin login
  .login
    h1 Войти
    .login--details
      +text-field({type: 'Email', placeholder: 'Email'})
      +text-field({type: 'Password', placeholder: 'Пароль'})
    +button({size: 'big', title: 'Войти'})
    .login--signup
      p Нет аккаунта на Toxin?
      +button({size: 'medium', theme: 'border', title: 'Создать'})