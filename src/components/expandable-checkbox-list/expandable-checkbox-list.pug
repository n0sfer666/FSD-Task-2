include ../checkbox/checkbox
-
  let expandList = []
  expandList.push({title: "Завтрак"})
  expandList.push({title: "Письменный стол", isChecked: true})
  expandList.push({title: "Стул для кормления", isChecked: true})
  expandList.push({title: "Кроватка", isChecked: true})
  expandList.push({title: "Телевизор"})
  expandList.push({title: "Шампунь"})
  expandList.push({title: "Телевизор"})
  expandList.push({title: "Шампунь"})
mixin expandable-checkbox-list({title = "Дополнительные удобства", list = expandList, jsClass = "demo"} = {})
  div(class = `expandable-checkbox-list js-expandable-checkbox-list`)
    h3.expandable-checkbox-list__title #{title}
    p(class = `expandable-checkbox-list__arrow js-expandable-checkbox-list__arrow-down`) keyboard_arrow_down
    p(class = `expandable-checkbox-list__arrow js-expandable-checkbox-list__arrow-up`) keyboard_arrow_up
  div(class = `expandable-checkbox-list__container js-expandable-checkbox-list__container`)
    each val in list
      +checkbox(val)