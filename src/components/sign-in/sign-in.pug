include ../headline/headline
include ../text-field/text-field
include ../button/button

mixin sign-in({action = "change me"}={})
  .sign-in
    form(class="sign-in__main-form", action=action)
      .sign-in__title
        +headline({type: "h1", title: "Войти"})
      .sign-in__details
        +text-field({type: "Email", placeholder: "Email"})
        +text-field({type: "Password", placeholder: "Пароль"})
      +button({style: "submitting", title: "Войти"})
    form(class="sign-in__sign-up-form", action="registration.html")
      .sign-in__sign-up
        p.sign-in__sign-up-text Нет аккаунта на Toxin?
        +button({style: "border", title: "Создать"})