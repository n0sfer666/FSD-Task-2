mixin toggle({isChecked = false, title = "Получать спецпредложения"} = {})
  label.toggle__container
    .toggle__flex-block
      if isChecked
        input(type="checkbox", class="toggle", checked)
      else
        input(type="checkbox", class="toggle")
      .toggle__switch
      span.toggle__label
        .toggle__wrapper
          p.toggle__title #{title}