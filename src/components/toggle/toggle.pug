mixin toggle({isChecked = false, title = "Получать спецпредложения"} = {})
  label.toggle
    .toggle__flex-block
      if isChecked
        input(type="checkbox", class="toggle__input", checked)
      else
        input(type="checkbox", class="toggle__input")
      .toggle__switch
      span.toggle__label
        .toggle__wrapper
          p.toggle__title #{title}