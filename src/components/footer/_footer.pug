mixin vMenu(options)
    h3=options.title
    each val in options.links
        a(href="#", class="footer--link")=val
mixin footer(options)
    if options.isShort
        footer
            .footer--container_short 
                .footer--logo_short
                    +logo(true)
                .footer--description_short
                    p #{options.description}
                .footer--social
                    +socialTwitter
                    +socialFacebook
                    +socialInstagram
    else
        footer
            .footer--container
                .footer--description
                    .footer--logo
                        +logo(true)
                    p #{options.description}
                .footer--menu
                    .footer--navigation
                        +vMenu({title: options.navigation.title, links: options.navigation.links})
                    .footer--aboutUs
                        +vMenu({title: options.aboutUs.title, links: options.aboutUs.links})
                    .footer--support
                        +vMenu({title: options.support.title, links: options.support.links})
                    .footer--subscribe
                        h3= options.subscribe.title
                        p= options.subscribe.description
                        +SubscribtionTextField("_footer--subscribe", "_footer--subscribeButton", options.subscribe.placeholder)
            .footer--copyright
                p= options.copyright
                .footer--social
                    +socialTwitter
                    +socialFacebook
                    +socialInstagram

