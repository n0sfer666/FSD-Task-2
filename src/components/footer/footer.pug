include ../headline/headline
include ../logo/logo
include ../subscription-field/subscription-field
include ../footer-menu-block/footer-menu-block
-
  const footerDescription = "Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»"
  
  const footerNavigationLinks = []
  const footerNavigation = {title: "навигация"}
  footerNavigationLinks.push("О нас")
  footerNavigationLinks.push("Новости")
  footerNavigationLinks.push("Служба поддержки")
  footerNavigationLinks.push("Услуги")
  footerNavigation.links = footerNavigationLinks

  const footerAboutUs = {title: "о нас"}
  const footerAboutUsLinks = []
  footerAboutUsLinks.push("О сервисе")
  footerAboutUsLinks.push("Наша команда")
  footerAboutUsLinks.push("Вакансии")
  footerAboutUsLinks.push("Инвесторы")
  footerAboutUs.links = footerAboutUsLinks

  const footerSupport = {title: "служба поддержки"}
  const footerSupportLinks = []
  footerSupportLinks.push("Соглашения")
  footerSupportLinks.push("Сообщества")
  footerSupportLinks.push("Связь с нами")
  footerSupport.links = footerSupportLinks

  const footerSubscription = {title: "Подписка"}
  footerSubscription.description = "Получайте специальные предложения и новости сервиса"

  const footerCopyright = "отель. Все права зачищены."


mixin footer({isShort = false, description = footerDescription, navigation = footerNavigation, aboutUs = footerAboutUs, support = footerSupport, subscription = footerSubscription, copyright = footerCopyright } = {})
  if isShort
    .footer.footer_short
      .footer__logo
        +logo({isFull: true})
      p.footer__description.footer__description_short #{description}
      .footer__icons
        a(href = "https://twitter.com/", class = "footer__icon footer__icon-tweeter")
        a(href = "https://www.facebook.com/", class = "footer__icon footer__icon-facebook")
        a(href = "https://www.instagram.com/", class = "footer__icon footer__icon-instagram")
  else
    .footer.footer_full
      .footer__block
        .footer__logo
          +logo({isFull: true})
        p.footer__description #{description}
      .footer__menu
        +footer-menu-block(navigation)
        +footer-menu-block(aboutUs)
        +footer-menu-block(support)
      .footer__block.footer__block-subscription
        .footer__block-title
          +headline({title: subscription.title})
        p #{subscription.description}
        +subscription-field()
    .footer__copyright
      p.footer__copyright-text Copyright © 2018 Toxin #{copyright}
      .footer__icons
        a(href = "https://twitter.com/", class = "footer__icon footer__icon-tweeter")
        a(href = "https://www.facebook.com/", class = "footer__icon footer__icon-facebook")
        a(href = "https://www.instagram.com/", class = "footer__icon footer__icon-instagram")