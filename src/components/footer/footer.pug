include ../headline/headline
include ../logo/logo
include ../icon-social/icon-social
include ../subscription-field/subscription-field
include ../footer-menu/footer-menu

mixin footer({description = 'Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»', titles = [ { title: 'навигация', links: ['О нас', 'Новости', 'Служба поддержки', 'Услуги'] }, { title: 'о нас', links: ['О сервисе', 'Наша команда', 'Вакансии', 'Инвесторы'] }, { title: 'служба поддержки', links: ['Соглашения', 'Сообщества', 'Связь с нами'] } ], subscription = {title: 'Подписка', description: 'Получайте специальные предложения и новости сервиса'}, copyright = 'отель. Все права зачищены.', socialNetworks = ['tweeter', 'facebook', 'instagram'] } = {})
  footer.footer
    .footer__wrapper
      .footer__block
        .footer__logo
          +logo({isFull: true})
        p.footer__description #{description}
      .footer__menu
        each title in titles
          +footer-menu(title)
      .footer__block-subscription
        .footer__block-title
          +headline({title: subscription.title})
        p.footer__description #{subscription.description}
        +subscription-field({placeholder: subscription.placeholder})
    .footer__copyright
      p.footer__copyright-text Copyright © 2018 Toxin #{copyright}
      .footer__icons
        each socialNetwork in socialNetworks
          +icon-social({socialNetwork: socialNetwork})
