mixin rate({rate = 0} = {})
  -
    const stars = [1, 2, 3, 4, 5]
  .rate.js-rate
    each value in stars
      -
        const isRated = value <= rate
        const classStar = isRated
          ? 'rate__star js-rate__star rate__star_rated'
          : 'rate__star js-rate__star'
      button(type = 'button', class = 'rate__button')
        span(class = classStar, data-value = value)