include ../logo/logo
include ../button/button
include ../header-menu/header-menu

mixin header({isAuth = false, login = 'Cosmin Negoita', loginButton = 'Войти', signUpButton = 'Зарегистрироваться', links = [ {title: 'О нас'}, {type: 'popup', title: 'Услуги'}, {title: 'Вакансии'}, {title: 'Новости'}, {type: 'popup', title: 'Соглашения'} ] } = {})
  header.header
    .header__logo
      +logo({isFull: true})
    .header__nav-bar
      .header__menu
        each linkText in links
          +header-menu(linkText)
      if isAuth
        p.header__login #{login}
      else
        .header__buttons
          form(class='header__button-sign-in', action='sign-in.html')
            +button({style: 'border', title: loginButton})
          form(class='header__button-sign-up', action='registration.html')
            +button({style: 'gradient', title: signUpButton})