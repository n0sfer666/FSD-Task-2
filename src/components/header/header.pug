include ../logo/logo
include ../button/button
include ../header-menu-link/header-menu-link
-
  let headerLinks = []

  headerLinks.push({title: "О нас"})
  headerLinks.push({type: "popup", title: "Услуги"})
  headerLinks.push({title: "Вакансии"})
  headerLinks.push({title: "Новости"})
  headerLinks.push({type: "popup", title: "Соглашения"})

mixin header({isAuth = false, login = "Cosmin Negoita", loginButton = "Войти", signUpButton = "Зарегистрироваться", links = headerLinks } = {})
  .header
    .header__logo
      +logo({isFull: true})
    .header__nav-bar
      .header__menu
        each val in links
          +header-menu-link(val)
      if isAuth
        p.header__login #{login}
      else
        .header__buttons
          form(class="header__button-signin", action="sign-in.html")
            +button({theme: "border", title: loginButton, type: "submit"})
          form(class="header__button-signup", action="registration.html")
            +button({theme: "gradient", title: signUpButton, type: "submit"})