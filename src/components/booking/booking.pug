include ../date-dropdown/date-dropdown
include ../dropdown/dropdown
include ../button/button

mixin booking({apart = "888", isLux = true, price = "9990", discount = "2179", complementary = 300, additional = "0"} = {})
  -
    let isDiscounted = discount == 0 ? false : true

  .booking
    .booking__header
      .booking__header-apart
        h1.h1 
          span.booking__header-number № 
          | #{apart}
        if isLux
          h3.h3  люкс
      span.booking__header-price
        b.js-booking__price #{price}
        b ₽ 
        | в сутки
    .booking__arival-departure
      +date-dropdown({isSingle: false, jsClass: "booking", label: ["прибытие", "отъезд"]})
    .booking__guests
      h3.h3.label гости
      +dropdown({jsClass: "booking"})
    .booking__calculation
      .booking__calculation-line
        p
          span.js-booking__price #{price}
          span ₽ X 
          span.js-booking__daysIn 0 суток
        span.js-booking__cost 0
          span ₽
      .booking__calculation-line
        .booking__calculation-text
          p Сбор за услуги: 
            if isDiscounted
              span скидка 
              span.js-booking__discount #{discount}
              span ₽
          span.booking__exclamation
            b i
        .booking__calculation-aditional
          span.js-booking__additional #{additional}
          span ₽
      .booking__calculation-line
        .booking__calculation-text
          p Сбор за дополнительные услуги
          span.booking__exclamation
            b i
        .booking__calculation-complementary
          span.js-booking__complementary #{complementary}
          span ₽
    .booking__total
      h2.h2 Итого
      .booking__total-line-dashed
      h2.h2.js-booking__total 0
      h2.h2 ₽
    .booking__submit-button
      +button({size: "big", title: "забронировать"})