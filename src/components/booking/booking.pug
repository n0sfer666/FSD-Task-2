include ../headline/headline
include ../date-dropdown/date-dropdown
include ../dropdown/dropdown
include ../button/button

mixin booking({apartament = "888", isLux = true, price = "9990", discount = "2179", complementary = 300, additional = "0", action = "change me" } = {})
  -
    const isDiscounted = discount == 0 ? false : true

  form(class="booking js-booking", action=action)
    .booking__header
      .booking__header-apartament
        span.booking__header-number № 
        +headline({level: "1", title: apartament})
        if isLux
          .booking__header-apartament-lux
            +headline({title: " люкс"})
      span.booking__header-price
        span.booking__header-price-text.booking__header-price-text_bold.js-booking__header-price-text #{price}
        span.booking__header-price-text.booking__header-price-text_bold ₽ 
        | в сутки
    .booking__arival-departure
      +date-dropdown({isSingle: false, label: ["прибытие", "выезд"]})
    .booking__guests
      .booking__guests-text
        +headline({title: "гости"})
      +dropdown()
    .booking__calculation
      .booking__calculation-line
        p
          span.booking__price.js-booking__price #{price}
          span ₽ X 
          span.booking__daysIn.js-booking__daysIn 0 суток
        p
          span.booking__cost.js-booking__cost 0
          span ₽
      .booking__calculation-line
        .booking__calculation-text
          p.booking__description Сбор за услуги: 
            if isDiscounted
              span скидка 
              span.booking__discount.js-booking__discount #{discount}
              span ₽
          span.booking__exclamation
            span.booking__exclamation-symbol.booking__exclamation-symbol_bold i
        .booking__calculation-aditional
          span.booking__additional.js-booking__additional #{additional}
          span ₽
      .booking__calculation-line
        .booking__calculation-text
          p.booking__description Сбор за дополнительные услуги
          span.booking__exclamation
            span.booking__exclamation-symbol.booking__exclamation-symbol_bold i
        .booking__calculation-complementary
          span.booking__complementary.js-booking__complementary #{complementary}
          span ₽
    .booking__total
      h2.booking__total-text Итого
      .booking__total-line.booking__total-line_dashed
      h2.booking__total-text.js-booking__total-text 0
      h2.booking__total-text ₽
    .booking__submit-button
      +button({style: "submit", title: "забронировать"})