mixin headline({ type = 'h3', title = 'change me', isPurple = false } = {})
  -
    const types = ['h1', 'h2', 'h3'];
    const classes = ['headline-subsection', 'headline-widget', 'headline-label'];
    const isTypeCorrect = [];
    const correctIndex = []; 
    types.map((value, index) => {
      if (value === type) {
        isTypeCorrect.push(true);
        correctIndex.push(index);
      }
    })
    const correctClass = isPurple
      ? `${classes[ correctIndex[0] ]} ${classes[ correctIndex[0] ]}_purple`
      : `${classes[ correctIndex[0] ]}`;
  if isTypeCorrect[0]
    #{types[ correctIndex[0] ]}(class = correctClass) #{title}
  else
    p something wrong