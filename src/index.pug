//- mixin base(title, css, js)
include ./_components/_base/_pug/_base
//- mixin logo
include ./_components/_base/_pug/_logo
//- mixin textField (id, label, placeholder)
include ./_components/_formElements/_textField/textField
//- mixin dropdown (isGuests, label)
include ./_components/_formElements/_dropdown/dropdown
//- mixin dateDropdown (idLeft, idRight, labelLeft, labelRight)
include ./_components/_formElements/_dateDropdown/_dateDropdown
//- mixin filterDateDropdown(id, label)
include ./_components/_formElements/_filterDateDropdown/_filterDateDropdown
//- mixin SubscribtionTextField (textId, buttonId, label, placeholder)
include ./_components/_formElements/_subscribtionTextField/_subscribtionTextField
//- mixin expandableCheckboxList(id, title)
include ./_components/_formElements/_expandableCheckboxList/_expandableCheckboxList
//- mixin condition(pict, title, description)
include ./_components/_formElements/_conditions/conditions

doctype html
html
    +base("Form Elements", "main.css", "main.js")
    body    
        +logo
        .container
            form(action="", method="post")
                div(style = "width: 320px; margin-bottom: 20.44px;")
                    +textField("textField", "text field", "Email")
                div(style = "width: 320px; margin-bottom: 22.56px;")
                    +dropdown(true, "dropdown")
                div(style = "width: 320px; margin-bottom: 40px;")  
                    +textField("maskedTextField", "masked text field", "ДД.ММ.ГГГГ")
                div(style = "width: 320px; height: 65px; margin-bottom: 40.56px;")  
                    +dateDropdown("dateDropdownLeft", "dateDropdownRight", "date dropdown", "date dropdown")
                div(style = "width: 266px; margin-bottom: 41px;")  
                    +filterDateDropdown("filterDateDropdown", "filter date dropdown")
                div(style = "width: 266px; margin-bottom: 100px; position: relative;")  
                    +SubscribtionTextField("SubscribtionTextField", "SubscribtionButton", "subscription text field", "Email")
                div(style = "width: 266px; margin-bottom: 40px;")  
                    +expandableCheckboxList("expList", "expandable checkbox list")
                div(style = "width: 291px;")
                    +condition("smile", "Комфорт", "Шумопоглащающие стены")
                    +condition("building", "Удобство", "Окно в каджой из спален")