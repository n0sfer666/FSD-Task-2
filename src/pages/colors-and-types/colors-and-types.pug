mixin cBlock (mod, text, hexColor)
  -
    var cellClassName = `colors__cell colors__cell_${mod}`
    var textClassName = "colors__text"
    var textRegClassName = `${textClassName}_regular`
  .colors__block
    div(class = cellClassName)
    p(class = textClassName) #{text}
      <br>
      span(class = textRegClassName) #{hexColor}

mixin tBlock (mod, text)
  -
    var titleClassName = `type__title type__title_${mod}`
  .type__block
    span(class = titleClassName) #{mod}
    case mod
      when "h1"
        h1.h1 #{text}
      when "h2"
        h2.h2 #{text}
      when "h3"
        h3.h3 #{text}
      when "body"
        p #{text}
      default
        p somthing wrong

//- mixin head(title, css, js)
include ../../components/head/head
//- mixin logo
include ../../components/logo/logo
doctype html
html
  +head({title: "Colors & Types", isProduction: true})
  body
    .logo
      +logo()

    .container
      .colors
        +cBlock("dark-shade-100", "dark shade 100%", "#1F2041")
        +cBlock("dark-shade-75", "dark shade 75%", "#1F2041")
        +cBlock("dark-shade-50", "dark shade 50%", "#1F2041")
        +cBlock("dark-shade-25", "dark shade 25%", "#1F2041")
        +cBlock("dark-shade-5", "dark shade 5%", "#1F2041")
        +cBlock("purple", "purple", "#BC9CFF")
        +cBlock("green", "green", "#6FCF97")
      .type
        +tBlock("h1", "This one is the sub-section or widget title")
        +tBlock("h2", "Next one is the item title inside widgets")
        +tBlock("h3", "This is a label or CTA text")
        +tBlock("body", "This is the body text which is used for most of the design, like paragraphs, lists, etc.")