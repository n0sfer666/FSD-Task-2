include ../../components/head/head

include ../../components/header/header
include ../../components/footer/footer

include ../../components/booking/booking

include ../../components/headline/headline
include ../../components/condition/condition
include ../../components/review/review
include ../../components/bullet-list/bullet-list
include ../../components/piechart/piechart



doctype html
html
  +head({title: "Room-detail"})
  body.room-detail
    header.room-detail__header
      +header()
      
    main.room-detail__content
      section.room-detail__galary
        .room-detail__galary-main
          img(class="room-detail__img", src="./img/detail-888-1.jpg")
        .room-detail__galary-addition
          img(class="room-detail__img", src="./img/detail-888-2.jpg")
          img(class="room-detail__img", src="./img/detail-888-3.jpg")
      section.room-detail__container
        .room-detail__details
          .room-detail__conditions
            .room-detail__title
              +headline({level: "2", title: "Сведения о номере"})
            -
              config = {}
              config.icon = "insert_emoticon"
              config.title = "Комфорт"
              config.description = "Шумопоглащающие стены"
              config.isRowed = true
            +condition(config)
            -
              config = {}
              config.icon = "location_city"
              config.title = "Удобство"
              config.description = "Окно в каждой из спален"
              config.isRowed = true
            +condition(config)
            -
              config = {}
              config.icon = "whatshot"
              config.title = "Уют"
              config.description = "Номер оснащён камином"
              config.isRowed = false
            +condition(config)

          .room-detail__piechart
            .room-detail__title
              +headline({level: "2", title: "Впечатления от номера"})
            -
              config = {}
              config.perfect = 130
              config.good = 65
              config.satisfact = 65
            +piechart(config)
          .room-detail__reviews
            .room-detail__title
              +headline({level: "2", title: "Впечатления от номера"})
            p.room-detail__title-reviews 2 отзыва
            -
              config = {}
              config.login = "user-1"
              config.likeCount = "10"
              config.isLiked = true
              config.name = "Мурад Сарафанов"
              config.timeAgo = "5 дней назад"
              config.review = "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей"
            +review(config)
            -
              config = {}
              config.login = "user-2"
              config.likeCount = "2"
              config.name = "Патрисия Стёклышкова"
              config.timeAgo = "Неделю назад"
              config.review = "Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент"
            +review(config)
          .room-detail__rules
            .room-detail__title
              +headline({level: "2", title: "Впечатления от номера"})
            -
              const bullets = []
              bullets.push("Нельзя с питомцами")
              bullets.push("Без вечеринок и мероприятий")
              bullets.push("Время прибытия — после 13:00, а выезд до 12:00")
            +bullet-list({titles: bullets})
          .room-detail__cancel
            .room-detail__title
              +headline({level: "2", title: "Впечатления от номера"})
            p Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.

        .room-detail__booking
          -
            config = {}
            config.appart = "888"
            config.isLux = true
            config.price = "9990"
            config.discount = "2179"
            config.complementary = "300"
          +booking(config)

    footer.room-detail__footer
      +footer()

    script(src="main.min.js")