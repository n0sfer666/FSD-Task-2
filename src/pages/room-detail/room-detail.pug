include ../../components/head/head

include ../../components/header/header
include ../../components/footer/footer

include ../../components/booking/booking

include ../../components/headline/headline
include ../../components/condition/condition
include ../../components/review/review
include ../../components/bullet-list/bullet-list
include ../../components/piechart/piechart



doctype html
html
  +head({title: "Room-detail"})
  body.room-detail
    header.room-detail__header
      +header()
      
    main.room-detail__content
      section.room-detail__galary
        .room-detail__galary-main
          img(class="room-detail__img", src="./img/detail-888-1.jpg")
        .room-detail__galary-addition
          img(class="room-detail__img", src="./img/detail-888-2.jpg")
          img(class="room-detail__img", src="./img/detail-888-3.jpg")
      section.room-detail__container
        .room-detail__details
          .room-detail__conditions
            .room-detail__title
              +headline({level: "2", title: "Сведения о номере"})
            -
              const conditionConfig1 = {}
              conditionConfig1.icon = "insert_emoticon"
              conditionConfig1.title = "Комфорт"
              conditionConfig1.description = "Шумопоглащающие стены"
              conditionConfig1.isRowed = true
            +condition(conditionConfig1)
            -
              const confidionConfig2 = {}
              confidionConfig2.icon = "location_city"
              confidionConfig2.title = "Удобство"
              confidionConfig2.description = "Окно в каждой из спален"
              confidionConfig2.isRowed = true
            +condition(confidionConfig2)
            -
              const conditionConfig3 = {}
              conditionConfig3.icon = "whatshot"
              conditionConfig3.title = "Уют"
              conditionConfig3.description = "Номер оснащён камином"
              conditionConfig3.isRowed = false
            +condition(conditionConfig3)

          .room-detail__piechart
            .room-detail__title
              +headline({level: "2", title: "Впечатления от номера"})
            -
              const piechartConfig = {}
              piechartConfig.perfect = 130
              piechartConfig.good = 65
              piechartConfig.satisfact = 65
              piechartConfig.disappoint = 0
            +piechart(piechartConfig)
          .room-detail__reviews
            .room-detail__title
              +headline({level: "2", title: "Впечатления от номера"})
            p.room-detail__title-reviews 2 отзыва
            -
              const reviewConfig1 = {}
              reviewConfig1.login = "user-1"
              reviewConfig1.likeCount = "10"
              reviewConfig1.isLiked = true
              reviewConfig1.name = "Мурад Сарафанов"
              reviewConfig1.timeAgo = "5 дней назад"
              reviewConfig1.review = "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей"
            +review(reviewConfig1)
            -
              const reviewConfig2 = {}
              reviewConfig2.login = "user-2"
              reviewConfig2.likeCount = "2"
              reviewConfig2.name = "Патрисия Стёклышкова"
              reviewConfig2.timeAgo = "Неделю назад"
              reviewConfig2.review = "Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент"
            +review(reviewConfig2)
          .room-detail__rules
            .room-detail__title
              +headline({level: "2", title: "Впечатления от номера"})
            -
              const bullets = []
              bullets.push("Нельзя с питомцами")
              bullets.push("Без вечеринок и мероприятий")
              bullets.push("Время прибытия — после 13:00, а выезд до 12:00")
            +bullet-list({titles: bullets})
          .room-detail__cancel
            .room-detail__title
              +headline({level: "2", title: "Впечатления от номера"})
            p Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.

        .room-detail__booking
          -
            const bookingConfig = {}
            bookingConfig.appart = "888"
            bookingConfig.isLux = true
            bookingConfig.price = "9990"
            bookingConfig.discount = "2179"
            bookingConfig.complementary = "300"
          +booking(bookingConfig)

    footer.room-detail__footer
      +footer()

    script(src="main.min.js")