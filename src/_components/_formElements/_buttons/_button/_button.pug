//- size: small, medium, big
//- theme:  for {size: small}: isGray (true) - gray color, else purple
//-         for {size: medium}: gradient, border
//- isOpacity: true - add button_opacity class for medium size
//- title: whatever
mixin button(options)
    -
        var className = options.size == undefined ? "button_big": "button_" + options.size
        if(options.size === 'medium')
            className += ' button_' + options.theme
            if(options.isOpacity)
                className += ' button_opacity'
        if(options.size === 'small')
            className += options.isGray ? ' button_gray' : ' button_purple'

    button(type="button", class=className)
        h3 #{options.title}