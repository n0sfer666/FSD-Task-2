mixin menuLink(options)
    //- -
    //-     var mr = options.mr == undefined ? "30" : options.mr
    if options.mod == "link"
        a(href="#", class="header__menuLink") #{options.text}
    if options.mod == "home"
        a(href="#", class="header__menuLink header__menuLink_home") #{options.text}
    if options.mod == "submenu"
        a(href="#", class="header__menuLink", id=options.id) #{options.text}
