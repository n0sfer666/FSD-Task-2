mixin menuLink(mod, text)
    if mod == "link"
        a(href="#", class="header__menuLink") #{text}
    if mod == "home"
        a(href="#", class="header__menuLink header__menuLink_home") Home
    if mod == "submenu"
        a(href="#", class="header__menuLink header__menuLink_submenu") #{text}
